    <script>
        // Agregar interactividad a los niveles de la pirámide
        document.querySelectorAll('.pyramid-level').forEach(level => {
            level.addEventListener('click', function() {
                // Resaltar el nivel clickeado
                this.style.transform = 'scale(1.02)';
                this.style.boxShadow = '0 15px 30px rgba(0, 0, 0, 0.2)';
                
                // Quitar el resaltado después de un momento
                setTimeout(() => {
                    this.style.transform = '';
                    this.style.boxShadow = '';
                }, 300);
                
                // Mostrar en consola qué nivel fue clickeado
                const levelId = this.id;
                const levelNames = {
                    'fisiologicas': 'Necesidades Fisiológicas',
                    'seguridad': 'Necesidades de Seguridad',
                    'afiliacion': 'Necesidades de Afiliación',
                    'reconocimiento': 'Necesidades de Reconocimiento',
                    'autorrealizacion': 'Necesidades de Autorrealización'
                };
                console.log(`Nivel clickeado: ${levelNames[levelId]}`);
            });
        });
        
        // Efecto de aparición al cargar la página
        window.addEventListener('load', function() {
            document.querySelector('.container').style.opacity = '0';
            document.querySelector('.container').style.transition = 'opacity 1s';
            
            setTimeout(() => {
                document.querySelector('.container').style.opacity = '1';
            }, 100);
            
            // Animar los niveles uno por uno
            const levels = document.querySelectorAll('.pyramid-level');
            levels.forEach((level, index) => {
                level.style.opacity = '0';
                level.style.transform = 'translateY(20px)';
                level.style.transition = 'opacity 0.8s, transform 0.8s';
                
                setTimeout(() => {
                    level.style.opacity = '1';
                    level.style.transform = 'translateY(0)';
                }, 300 + (index * 200));
            });
        });
    </script>
